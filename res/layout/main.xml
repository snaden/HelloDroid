<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <ImageView
            android:layout_width="500px"
            android:layout_height="500px"
            android:id="@+id/imageView" android:layout_gravity="center_horizontal" android:src="@drawable/hellodroid"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hi I'm Darth Droid touch me if you like!"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:textAlignment="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I hate sand.  It gets everywhere"
            android:id="@+id/message" android:layout_gravity="center_horizontal" android:layout_weight="0.07"/>


</LinearLayout>

